<div class="container">
  <div class="main">
    <h1>PocketBoard</h1>
    <p class="lead">Snap a picture, send it to <br>
    (323) 673-2344</p>
    <p>
      <h4><%= pluralize(@count, 'snap') %> sent</h4></h4>
    </p>
  </div>
  <div class="row">
    <% @snaps.each do |snap| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= snap.media_url %>">
          <div class="caption">
            <h5><%= snap.user.phone %> <small><%= time_ago_in_words(snap.created_at) %></small></h5>
            <p><%= snap.body %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
